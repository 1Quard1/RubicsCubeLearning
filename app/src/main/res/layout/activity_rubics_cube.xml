<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_brown"
    tools:context=".RubicsCubeActivity">

    <ImageButton
        android:id="@+id/btTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_brown"
        android:onClick="btTimerOnClick"
        app:layout_constraintBottom_toTopOf="@+id/brLearning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bt_timer" />

    <ImageButton
        android:id="@+id/brLearning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_brown"
        android:onClick="btLearningOnClick"
        app:layout_constraintBottom_toTopOf="@+id/btStatistics"
        app:layout_constraintEnd_toEndOf="@+id/btTimer"
        app:layout_constraintStart_toStartOf="@+id/btTimer"
        app:layout_constraintTop_toBottomOf="@+id/btTimer"
        app:srcCompat="@drawable/bt_learning" />

    <ImageButton
        android:id="@+id/btStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_brown"
        android:onClick="btStatisticsOnClick"
        app:layout_constraintBottom_toTopOf="@+id/btHome"
        app:layout_constraintEnd_toEndOf="@+id/brLearning"
        app:layout_constraintStart_toStartOf="@+id/brLearning"
        app:layout_constraintTop_toBottomOf="@+id/brLearning"
        app:srcCompat="@drawable/bt_statistics" />

    <ImageButton
        android:id="@+id/btHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_brown"
        android:onClick="btHomeOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bt_home" />
</androidx.constraintlayout.widget.ConstraintLayout>